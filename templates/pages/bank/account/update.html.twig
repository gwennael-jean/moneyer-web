{% block title %}{% trans %}Update account{% endtrans %}{{ parent() }}{% endblock %}

{% block body %}
    <div class="mb-3">
        <h1>{% trans %}Update account{% endtrans %}</h1>
        {{ form_start(form) }}
        {{ form_rest(form) }}
