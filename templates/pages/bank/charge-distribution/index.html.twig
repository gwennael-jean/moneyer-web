{% extends 'base-connected.html.twig' %}

{% block title %}{% trans %}Set charge distribution{% endtrans %}{{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="mb-3">
            <h1>{% trans %}Set charge distribution{% endtrans %}</h1>
            {{ form_start(form) }}
            {{ form_rest(form) }}
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i>
                {% trans %}Save{% endtrans %}
            </button>
            {% if charge.chargeDistribution is not null %}
            <a class="btn btn-danger" href="{{ path('bank_charge_distribution_delete', { id: charge.chargeDistribution.id }) }}">
                <i class="fas fa-trash-alt"></i>
                {% trans %}Delete{% endtrans %}
            </a>
            {% endif %}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
