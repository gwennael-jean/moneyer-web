{% extends 'base-connected.html.twig' %}

{% block title %}{% trans %}Account List{% endtrans %}{{ parent() }}{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                {% trans %}Search{% endtrans %}:
            </a>
            <div class="collapse navbar-collapse" id="searchbar">
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="mb-3">
        <table class="table">
            <thead>
            <tr>
                <th>{% trans %}Account Name{% endtrans %}</th>
                <th>{% trans %}Account Owner{% endtrans %}</th>
                <th>{% trans %}Account Created By{% endtrans %}</th>
                <th class="text-end">{% trans %}Resource Total{% endtrans %}</th>
                <th class="text-end">{% trans %}Charge Total{% endtrans %}</th>
                <th class="text-end">{% trans %}Total{% endtrans %}</th>
                <th class="text-end">{% trans %}Actions{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for account in accounts %}
                <tr>
                    <td>{{ account.name }}</td>
                    <td>{{ account.owner ? account.owner.fullname : '' }}</td>
                    <td>{{ account.createdBy.fullname }}</td>
                    <td class="text-end">{{ account.totalResources | format_currency('EUR') }}</td>
                    <td class="text-end">{{ account.totalCharges | format_currency('EUR') }}</td>
                    <td class="text-end">{{ account.total | format_currency('EUR') }}</td>
                    <td class="text-end">

                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Action
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="#" class="dropdown-item">
                                        <i class="fas fa-eye"></i>
                                        {% trans %}Show Charges{% endtrans %}
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="dropdown-item">
                                        <i class="fas fa-eye"></i>
                                        {% trans %}Show Resources{% endtrans %}
                                    </a>
                                </li>

                                {% if is_granted('edit', account) %}
                                    <li>
                                        <a href="{{ path('bank_account_update', { account: account.id }) }}" class="dropdown-item">
                                            <i class="fas fa-pencil-alt"></i>
                                            {% trans %}Edit Account{% endtrans %}
                                        </a>
                                    </li>
                                {% endif %}

                                {% if is_granted('share', account) %}
                                    <li>
                                        <a href="{{ path('bank_account_share', { account: account.id }) }}" class="dropdown-item">
                                            <i class="fas fa-share-alt"></i>
                                            {% trans %}Share Account{% endtrans %}
                                        </a>
                                    </li>
                                {% endif %}

                                {% if is_granted('delete', account) %}
                                <li>
                                    <a href="{{ path('bank_account_share', { account: account.id }) }}" class="dropdown-item">
                                        <i class="fas fa-trash"></i>
                                        {% trans %}Delete Account{% endtrans %}
                                    </a>
                                </li>
                                {% endif %}
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
