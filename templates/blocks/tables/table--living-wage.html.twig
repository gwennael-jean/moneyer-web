<table class="table">
    <thead>
    <tr>
        <th>{% trans %}User{% endtrans %}</th>
        <th class="text-end">{% trans %}Living Wage{% endtrans %}</th>
    </tr>
    </thead>
    <tbody>
        {% for user, amount in livingWage.map %}
            <tr>
                <td>{{ user.fullname }}</td>
                <td class="text-end">{{ amount | format_currency('EUR') }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div class="text-end">
    Total: {{ livingWage.total | format_currency('EUR') }}
</div>
